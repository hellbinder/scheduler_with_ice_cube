%h1 Set up recurring payment for #{@account.name}
=simple_form_for [@account, @new_payment_schedule],  html: { class: 'form-horizontal' } do |f|
  =f.error_notification
  =f.select_recurring :schedule,
  [IceCube::Rule.monthly.day_of_month(1),
  IceCube::Rule.monthly.day_of_month([1,15])]
  
  =f.button :submit, { class: "btn btn-primary" }